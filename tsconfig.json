{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "es2015", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "types": ["jest", "node"]
  },
  "exclude": ["**/*.test.ts", "jest.config.ts", "build"]
}
